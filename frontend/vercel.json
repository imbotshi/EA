{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "https://ea-gszm.onrender.com/api/$1" },
    { "source": "/proxy", "destination": "https://ea-gszm.onrender.com/proxy" },
    { "source": "/proxy/(.*)", "destination": "https://ea-gszm.onrender.com/proxy/$1" },
    { "source": "/audio/(.*)", "destination": "https://ea-gszm.onrender.com/audio/$1" },
    { "source": "/comments_audio/(.*)", "destination": "https://ea-gszm.onrender.com/comments_audio/$1" }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
