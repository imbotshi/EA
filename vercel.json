{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist"
      }
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "https://ea-gszm.onrender.com/api/$1" },
    { "source": "/proxy", "destination": "https://ea-gszm.onrender.com/proxy" },
    { "source": "/proxy/(.*)", "destination": "https://ea-gszm.onrender.com/proxy/$1" },
    { "source": "/audio/(.*)", "destination": "https://ea-gszm.onrender.com/audio/$1" },
    { "source": "/comments_audio/(.*)", "destination": "https://ea-gszm.onrender.com/comments_audio/$1" }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/api/stations/listeners/stream",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache" },
        { "key": "X-Accel-Buffering", "value": "no" }
      ]
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
